{
  "private": "true",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:server": "npm run clean:server && webpack --config webpack/webpack.server.mjs",
    "build:client": "npm run clean:client && webpack --config webpack/webpack.client.mjs",
    "build": "npm-run-all --sequential build:*",
    "dev:server": "npm run build:server && nodemon build/server/server-bundle.js",
    "dev:client": "npm run build:client && webpack serve --config webpack/webpack.client.mjs",
    "concurrente": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "paralelo": "npm-run-all --parallel dev:*",
    "clean:client": "rimraf build/client webpack/.webpack_server_cache/ webpack/.webpack_client_cache/",
    "clean:server": "rimraf build/server webpack/.webpack_server_cache/ webpack/.webpack_client_cache/",
    "clean:logs": "rimraf logs",
    "clean": "rimraf build logs webpack/.webpack_server_cache/ webpack/.webpack_client_cache/",
    "analiza:client": "webpack --config webpack/webpack.client.mjs --env analyze",
    "analiza:server": "webpack --config webpack/webpack.server.mjs --env analyze",
    "analiza": "npm-run-all --parallel analiza:*",
    "start": "node build/server/server.bundle.js",
    "format": "prettier --write \"**/*.*\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.25.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.19",
    "compression-webpack-plugin": "^11.1.0",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "dotenv-webpack": "^8.1.0",
    "esbuild-loader": "^4.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-webpack-plugin": "^4.2.0",
    "globals": "^15.8.0",
    "html-webpack-plugin": "^5.6.0",
    "image-minimizer-webpack-plugin": "^4.1.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "null-loader": "^4.0.1",
    "postcss": "^8.4.40",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.7",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-node-externals": "^3.0.0"
  }
}
